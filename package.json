{
  "name": "karina-lsp",
  "displayName": "Karina",
  "description": "Support for the Karina programming language",
  "version": "0.7.9",
  "repository": {
    "type": "git",
    "url": "https://github.com/Plixo2/Karina-VSCode"
  },
  "icon": "icons/icon_black_color_128.png",
  "publisher": "karina",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Programming Languages",
    "Linters",
    "Other"
  ],
  "activationEvents": [
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "karina",
        "aliases": [
          "Karina",
          "karina"
        ],
        "extensions": [
          ".krna"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icons/icon_small_white_outline.png",
          "dark": "./icons/icon_small_black_outline.png"
        }
      }
    ],
    "grammars": [
      {
        "language": "karina",
        "scopeName": "source.karina",
        "path": "./karina.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "karina.restart-lsp",
        "title": "Karina: Restart LSP"
      },
      {
        "command": "karina.run.main",
        "title": "Karina: Run main"
      },
      {
        "command": "karina.run.file",
        "title": "Karina: Run a file"
      },
      {
        "command": "karina.download-lsp",
        "title": "Karina: Download LSP jar file"
      }
    ],
    "configuration": {
      "title": "Karina",
      "properties": {
        "karina.lspLocation": {
          "type": "string",
          "default": "",
          "description": "The location of the Karina LSP jar file",
          "pattern": ".*\\.jar$",
          "patternErrorMessage": "The path must point to a .jar file",
          "scope": "machine"
        },
        "karina.logLevel": {
          "type": "string",
          "enum": [
            "none",
            "basic",
            "verbose",
            "full"
          ],
          "default": "basic",
          "description": "Logging level for the Karina LSP",
          "scope": "application"
        }
      }
    },
    "configurationDefaults": {
      "[karina]": {
        "editor.semanticHighlighting.enabled": true
      }
    },
    "taskDefinitions": []
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "marketplace": "vsce publish",
    "deploy": "vsce publish",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "@vscode/vsce": "^3.6.0",
    "eslint": "^9.16.0",
    "ts-loader": "^9.5.4",
    "typescript": "^5.7.2",
    "vscode-languageclient": "^9.0.1",
    "webpack": "^5.101.3",
    "webpack-cli": "^5.1.4"
  }
}
